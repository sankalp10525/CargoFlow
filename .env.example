# Django / CargoFlow
DJANGO_ENV=dev
SECRET_KEY=change-me-to-a-random-50-char-string
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=postgresql://cargoflow:cargoflow@localhost:5432/cargoflow
POSTGRES_DB=cargoflow
POSTGRES_USER=cargoflow
POSTGRES_PASSWORD=cargoflow

# Redis / Celery  (DB numbers MUST stay distinct)
# DB 0 → Django Channels layer
# DB 1 → Celery broker
# DB 2 → Celery result backend
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Media storage (local by default)
DEFAULT_FILE_STORAGE=django.core.files.storage.FileSystemStorage

# AWS S3 (set DJANGO_ENV=prod and switch DEFAULT_FILE_STORAGE to use S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=ap-south-1
